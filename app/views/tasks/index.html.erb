<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <%# show a check box if the task is completed and show delete botton%>
    <% if task.completed %>
      <li><input type="checkbox" checked="checked" disabled="disabled" />
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% else %>
      <li><input type="checkbox" disabled="disabled" />
      <%= link_to task.title, task_path(task) %>
      <%= link_to "Delete", task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% end %>
  <% end %>
</ul>

<%# link to create a new task %>
<%= link_to "Add a new task", tasks_new_path %>
